@model IEnumerable<CoursesOnlinePlatform.Models.UserAndCourse>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Kursów powiązanych z Użytkownikami</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.User_Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.User_Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.User_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>